doctype html

html
  head
    title  Sing up page
    link(rel='stylesheet', type='text/css', href='./css/signup.css')
    script(src='./js/signup.js', type='text/javascript' )
    script(src='./js/statelist.js', type='text/javascript' )
    script()
  body
    .logo
    hr
    div
      form#userData(action='confirm', method='post', 
      onchange='validate(this)', 
      onsubmit='if (validate(this) === false) {return false;} else addcustomer(this);')
        table(border='1')
          tr
            td(colspan='2', align='center') Enter your information
          tr
            td Email Address: 
            td.longdata
              input(size='30', type='text', name='emailaddress')
              span#emailmsg
          tr
            td Password: 
            td.longdata
              input(size='20', type='password', name='password')
              span#passwdmsg
          tr
            td ReType Password:  
            td.longdata
              input(size='20', type='password', name='repassword')
              span#repasswdmsg
          tr
            td Full Name  
            td.longdata
              input(size='30', type='text', name='fullname')
              span#usrmsg
          tr
            td Address:  
            td.longdata
              input(size='40', type='text', name='address')
          tr
            td City:  
            td.longdata
              input(size='30', type='text', name='city')
          tr
            td State:  
            td.longdata
              select#statepop0(name='state')
          tr
            td Country:  
            td.longdata
              input.longdata(size='30', type='text', name='country')
          tr
            td Zip Code:  
            td.longdata
              input.longdata(size='20', type='text', name='zipcode')
              span#zipmsg
          tr
            td Phone No:  
            td.longdata
              input.longdata(size='30', type='text', name='phoneno')
              span#phonemsg
        table
          tr
            td
              button.submits(type='submit', value='Submit') Submit
            td
              button.submits(type='reset', value='Cancel') Cancel

